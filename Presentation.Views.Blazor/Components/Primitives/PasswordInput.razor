@typeparam TError
@inherits ModelComponentBase<IInputModel<String, TError>>

<InputControl @attributes="Attributes"
              Value="Model"
              TValue="String"
              TError="TError"
              Parse="v=>v"
              CanParse="v=>true"
              UpdateOnFocusLost="UpdateOnFocusLost"
              ErrorTitleParse="ErrorTitleParse!"
              InitialValueParse="v=>v" />

@code {
    [Parameter]
    public Func<TError, String>? ErrorTitleParse { get; set; }
    [Parameter]
    public Boolean UpdateOnFocusLost { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        _ = Attributes.TryAdd("type", "password");
    }
}